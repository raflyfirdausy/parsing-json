<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:weightSum="100"
    android:padding="5dp"
    android:layout_marginTop="5dp"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/linearItem">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_gambarItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="70"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_namaAnimeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Anime"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_kategoriItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori"
            android:textSize="15dp"
            android:textStyle="normal"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tv_ratingItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating : 10.0"
            android:textSize="15dp"
            android:background="@color/colorPrimary"
            android:padding="3dp"
            android:textColor="#FFFFFF"
            android:textStyle="normal"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tv_studioItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Studio"
            android:textSize="15dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

    </LinearLayout>
</LinearLayout>